<Window x:Class="CIMEX_Project.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CIMEX_Project"
        mc:Ignorable="d"
        Title="PatientWindow" Height="900" Width="800">
    <Grid>

        <Grid x:Name="grid" Margin="15" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="28" FontWeight="Bold"
                       FontFamily="Arial" TextAlignment="Left" HorizontalAlignment="Left"
                       VerticalAlignment="Top" Text="{Binding PatientName}" />
            <TextBlock Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="3" FontSize="22" FontWeight="Bold"
                       FontFamily="Arial" TextAlignment="Left" HorizontalAlignment="Left"
                       VerticalAlignment="Center" Text="{Binding RightTitle}" />
            <TextBlock Grid.Row="3" Grid.Column="0" FontSize="12" TextAlignment="Left" VerticalAlignment="Bottom"
                       Margin="30,0,0,0" Foreground="#01B0FF" Text="CIMEX by SoftPanda Solutions V0.1.0" />
            <Image Grid.Row="0" Grid.Column="1" Height="120" Source="Logo.png"></Image>
            <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="VisitButtonPanel" Orientation="Vertical"></WrapPanel>
            </ScrollViewer>

        </Grid>
    </Grid>
</Window>